{
  "verbose": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.js",
    "!<rootDir>/src/**/tests/**/*"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "testMatch": [
    "<rootDir>/src/**/tests/**/*.test.js"
  ]
}